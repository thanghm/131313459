<div id="edituser">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
          <div class="field">
            <label>Avatar</label><br />
            <%= image_tag(@user.avatar.medium_avatar)%>
          </div>
      </div>
      <div class="modal-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:validate => true, remote: true, html: { method: :put }) do |f| %>

              <div class="field">
                <%= f.file_field :avatar %>
              </div>

              <div class="field">
                <%= f.label :fullname %><br />
                <%= f.text_field :fullname, :class => 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :username %><br />
                <%= f.text_field :username, :class => 'form-control' %>
              </div>
              
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :address %><br />
                <%= f.text_field :address, :class => 'form-control', :placeholder => 'Enter address..' %>
              </div>  

              <div class="field">
                <%= f.label :phone %><br />
                <%= f.text_field :phone, :class => 'form-control', :placeholder => 'Enter phonenumber..' %>
              </div>

              <div class="field">
                <%= f.label :about %><br />
                <%= f.text_field :about, :class => 'form-control' %>
              </div>

              <div class="field">
                <% for roles in User::ROLES %>
                  <%= check_box_tag "user[roles][#{roles}]", roles, @user.roles.include?(roles), {:name => "user[roles][]"}%>
                  <%= label_tag "user_roles_#{roles}", roles.humanize %><br />
                <% end %>
                <%= hidden_field_tag "user[roles][]", "" %>  
              </div>

              <div class="actions">
                <%= f.submit "Update", :class => 'btn btn-default' %>
              </div>
            <% end %>

            <h3>Cancel my account</h3>

            <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger' %></p>

            <%= link_to "Back", root_path, :class => 'btn btn-link' %>
        </div>
        <div class="modal-footer">
        </div>
    </div>           
  </div>
</div>     
<div id="rgtsign_up">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="text-center" id="rgtbody">
          <p>You need to sign in or sign up before continuing.</p>
        </div>
      </div>
      <div class="modal-body">
        <div class="text-center">             
          <button id="rgtss" class="btn btn-success" data-toggle="modal" data-target="#regiter_">
            Click to Sign up now!
          </button>
        </div>
      </div>
      <div class="modal-footer">
      </div>           
    </div>  
  </div> 
</div>  

<div class="modal fade" id="regiter_" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
          <h2 class="text-center">Sign Up</h2>
      </div>
      <div class="modal-body">

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>  

            <div>
              <%= f.label :username, :class => 'sr-only' %><br />
              <%= f.text_field :username, :name => "user[username]", :class => 'form-control', :placeholder => 'Enter username..' %>
            </div>                            

            <div><%= f.label :email, :class => 'sr-only' %><br />

              <%= f.email_field :email, :name => "user[email]", :autofocus => true, :class => 'form-control', :placeholder => 'somebody@example.com' %></div>

            <div><%= f.label :password, :class => 'sr-only' %><br />
            
              <%= f.password_field :password, :name => "user[password]", :class => 'form-control', :placeholder => 'Password..' %></div>

            <div><%= f.label :password_confirmation, :class => 'sr-only' %><br />

              <%= f.password_field :password_confirmation, :name => "user[password_confirmation]", :class => 'form-control', :placeholder => 'Confirmation Password..' %></div>

            <div>
              <%= f.label :address, :class => 'sr-only' %><br />
              <%= f.text_field :address, :name => "user[address]", :class => 'form-control', :placeholder => 'Enter address..' %>
            </div>  

            <div>
              <%= f.label :phone, :class => 'sr-only' %><br />
              <%= f.text_field :phone, :name => "user[phone]", :class => 'form-control', :placeholder => 'Enter phonenumber..' %>
            </div>  

            <div><label class ='sr-only'></label><br />
              <% for roles in User::ROLES %>
                <%= check_box_tag "user[roles][#{roles}]", roles, @user.roles.include?(roles), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{roles}", roles.humanize %><br />
              <% end %>
              <%= hidden_field_tag "user[roles][]", "" %>
             </div>

            <div><label class ='sr-only'></label><br />
              <%= f.file_field :avatar %>
            </div>

          <a class="btn btn-link" onClick='window.location.href = "/users/sign_in" '>Log in here</a>                           
      </div>              
      <div class="modal-footer">
        <div class="col-md-12">
          <%= f.submit "Sign up", :class => 'btn btn-small btn-success', :id => "rgtsubmit" %>
            <button class="btn" id="rgtx" data-dismiss="modal" aria-hidden="true">Cancel</button>
          <% end -%>
        </div>
      </div>              
    </div>  
  </div>    
</div>
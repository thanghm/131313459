<%- model_class = Post -%>

  <% if !flash[:notice].blank? %>
    <div class="alert alert-info">
    <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2>You Are Applying For <b><%= @post.title %></b></h2>
      </div>
      
      <div class="modal-body" id="apply-form1">              
        <div class="form-group">
          <div class = 'control-label col-lg-3'><%= image_tag(@user.avatar.medium_avatar)%></div>
            <div class="col-lg-9">   
              <%= @user.fullname %></br>
              <%= @user.categories %></br>
              <%= @user.address %>
            </div>
        </div>
        
        <div class="form-group" style="margin-top:50px;">
          <label class = 'control-label col-lg-3'>Email Address:</label>
            <div class="col-lg-9">          
              <%= @user.email %>
            </div>
        </div>

        <div class="form-group">   
          <label class = 'control-label col-lg-3'>Phone Number:</label>
            <div class="col-lg-9">
              <%= @user.phone %>
            </div>
        </div>

        <div class="form-group">
          <label class = 'control-label col-lg-3'>To Email:</label>
            <div class="col-lg-9">
              <%= @recipients.email %>
            </div>
        </div>

        <div class="form-group"> 
          <label class = 'control-label col-lg-3'>Resume:</label>
            <div class="col-lg-9">
              <input type="file">
            </div>
        </div>  

        <div class="form-group">
          <label class = 'control-label col-lg-3'>Cover Letter:</label>
            <div class="col-lg-9">
              <textarea name="letter" class="form-control" style="height:80px; resize: none;"></textarea>
            </div>          
        </div>          
      </div>
      <div class="modal-footer" style="margin-top:50px;">
        <div class="pull-right">   
          <button class="btn btn-default">Submit</button></br>
        </div>           
          <%= link_to "Back", root_path, :class => 'btn btn-link' %>
      </div>
    </div>           
  </div>
 
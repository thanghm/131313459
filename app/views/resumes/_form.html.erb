<% if !@resume.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @resume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="well">
<%= form_for (@resume) do |f| %>
  <div class="field">
    <%= f.label :attchment %><br>
    <%= f.file_field :attchment %>
  </div>
  <div class="field">
    <%= f.label :letter %><br>
    <%= f.text_area :letter, :class => 'form-control', :placeholder => "Letter...", :style => "height:80px; resize: none;" %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>

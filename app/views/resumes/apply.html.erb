<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for (@resume), url: post_resume_applyto_path, html: { method: :post } do |f| %>
    <div class="modal-header">
      <h2>You Are Applying For <b><%= @post.title %></b></h2>
    </div>
    
    <div class="modal-body" id="apply-form1">
    
      <div class="form-group">
        <div class = 'control-label col-lg-3'><%= image_tag(@user.avatar.medium_avatar)%></div>
          <div class="col-lg-9">   
            <%= @user.fullname %></br>
            <%= @user.skill %></br>
            <%= @user.address %>
          </div>
      </div>
      
      <div class="form-group" style="margin-top:50px;">
        <label class = 'control-label col-lg-3'>Email Address:</label>
          <div class="col-lg-9">          
            <%= @user.email %>
          </div>
      </div>

      <div class="form-group">   
        <label class = 'control-label col-lg-3'>Phone Number:</label>
          <div class="col-lg-9">
            <%= @user.phone %>
          </div>
      </div>

      <div class="form-group"> 
        <label class = 'control-label col-lg-3'>Resume:</label>
          <div class="col-lg-9">
            <%= f.file_field :attachment, :value => @resume.attachment.original_filename %>
          </div>
      </div>  

      <div class="form-group">
        <label class = 'control-label col-lg-3'>Cover Letter:</label>
          <div class="col-lg-9">
            <%= f.text_area :letter, :value => "#{@resumes.letter}", :class => 'form-control', :placeholder => "Letter...", :style => "height:80px; resize: none;" %>
          </div>          
      </div>          
    </div>
    <div class="modal-footer" style="margin-top:50px;">
      <div class="pull-right">   
        <div class="actions">
          <%= f.submit "Apply", class: "btn btn-primary" %>
          <%= link_to 'Back', :back, class: "btn btn-default" %>
        </div>
      </div>           
    </div>
    <% end %>
  </div>           
</div>           

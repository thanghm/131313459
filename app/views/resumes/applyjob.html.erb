<h1>Listing Apply</h1>
<div class="well">
  <br />
  <br />
  <div id="resume-tb">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th style="text-align: center;">#</th>
          <th>Attachment</th>
          <th>Letter</th>
          <th>Job</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resume_job.each_with_index do |resume, index| %>
          <tr>
            <td style="text-align: center;"><%= index+1 %></td>
            <td><%= resume.attachment.original_filename %></td>
            <td><%= resume.letter %></td>
            <td><%= resume.post.title %></td>
            <td><%= link_to "Show resume", user_resume_path(@user, resume), class: "btn btn-default btn-sm" %>
            <%= link_to "Show job",
                          post_path(id: resume.post_id), :class => 'btn btn-default btn-sm' %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
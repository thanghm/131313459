<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />

<h1>Listing Resumes</h1>
<div class="well">
  <%= link_to "New Resume", new_user_resume_path(@user, @resume), class: "btn btn-primary btn-sm" %>
  <br />
  <br />
  <div id="resume-tb">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th style="text-align: center;">#</th>
          <th>Attachment</th>
          <th>Letter</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resumes.each_with_index do |resume, index| %>
          <tr>
            <td style="text-align: center;"><%= index+1 %></td>
            <td><%= link_to "Download Resume", resume.attachment_url %></td>
            <td><%= resume.letter %></td>
            <td><%= link_to "Show", user_resume_path(@user, resume), class: "btn btn-default btn-sm" %>
            <%= link_to 'Edit', edit_user_resume_path(@user, resume), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', user_resume_path(@user, resume), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


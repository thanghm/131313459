<div id="header">
	<div class="tagnav">
    <li>
    	<img class="phone" src="http://st.f1.vnecdn.net/myvne/images/icons/hotline_transparent.png" alt="">
    		<b> 0125.125.1325</b> (HN) - <b>0101.001.0001</b> (TP HCM)
    			</li>
    				<li>
      				<iframe src="//www.facebook.com/plugins/like.php?locale=en_US&amp;href=https://www.facebook.com/congdongvnexpress&amp;width&amp;layout=button&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=21&amp;appId=283547481836738" scrolling="no" frameborder="0" style="border:none; margin-bottom:-7px; overflow:hidden; height:21px; width:55px;" allowtransparency="true"></iframe>

    						</li>
    <div class="loginform">
	    <li class="hdlogin">				  	
						  <!-- Modal -->
						  <div id="loginmodal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
							  <div class="modal-dialog">
								  <div class="modal-content">
								    <div class="modal-header">
								      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
								         <h2 class="text-center">Login</h2>
								          <div class="text-center push-top-xs" style="margin-bottom: 10px;
														">Choose one of the following sign in methods.</div>
								          	<div class="social-bar text-center">
                            	<button class="btn btn-md btn-facebook push-top-xs" onclick="location.href = '/users/auth/facebook'" style="background: #3b5998; color: #fff !important;">
					                    	<i class="fa fa-fw fa-facebook"></i> <span> Facebook</span></button>
					                        <button class="btn btn-md btn-google push-top-xs" onclick="location.href = '/users/auth/google_oauth2'" style="background: #dd4b39;color: #fff !important;">
					                    	<i class="fa fa-fw fa-google"></i> <span> Google</span></button>
                          				</div>
								      							</div>
								      								<div class="modal-body">
																	      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "new_user"}, :format => :json, :remote => true ) do |f| %>
																					<div class="form-group"><%= f.label :email, :class => 'sr-only' %><br />

																					<%= f.email_field :email, :autofocus => true, :name => "user[email]", :class => 'form-control', :placeholder => 'somebody@example.com' %></div>

																					<div class="form-group"><%= f.label :password, :class => 'sr-only' %><br />

																					<%= f.password_field :password, :class => 'form-control', :name => "user[password]", :placeholder => 'Password..' %></div>

																					<% if devise_mapping.rememberable? -%>

																					<div class="form-group" style="margin-top:5px; margin-bottom:0;"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
																					<% end -%>
																				<a class="btn btn-link" onClick='window.location.href = "/users/sign_up" '>Register</a>
																			<a class="btn btn-link" onClick='window.location.href = "/users/password/new" '>Reset password</a>

						      									</div>
								      						<div class="modal-footer">
								        				<div class="col-md-12">
								          		<%= f.submit "Sign in", :class => 'btn btn-small btn-success' %>
								          	<% end %>
								          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
										  </div>	
								     </div>
						      </div>
						  	</div>						  
						</div>				
	    		</li>

	    <li class="hdregis">
				  		<!-- Modal -->
							<div class="modal fade" id="regiter_" tabindex="-1" role="dialog" aria-hidden="true">
					  		<div class="modal-dialog">
									<div class="modal-content">
						 				<div class="modal-header">
											<button class="close" data-dismiss="modal">x</button>
												<h2 class="text-center">Sign Up</h2>
						 							</div>
														<div class="modal-body">

															<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

															<%= devise_error_messages! %>

															<div><%= f.label :email, :class => 'sr-only' %><br />

															<%= f.email_field :email, :name => "user[email]", :autofocus => true, :class => 'form-control', :placeholder => 'somebody@example.com' %></div>

															<div><%= f.label :password, :class => 'sr-only' %><br />
															
															<%= f.password_field :password, :name => "user[password]", :class => 'form-control', :placeholder => 'Password..' %></div>

															<div><%= f.label :password_confirmation, :class => 'sr-only' %><br />

															<%= f.password_field :password_confirmation, :name => "user[password_confirmation]", :class => 'form-control', :placeholder => 'Confirmation Password..' %></div>
														<a class="btn btn-link" onClick='window.location.href = "/users/sign_in" '>Sign in</a>
													</div>							
												<div class="modal-footer">
											<div class="col-md-12">
										<%= f.submit "Sign up", :class => 'btn btn-small btn-success', :id => "rgtsubmit" %>
									<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
								<% end -%>
							</div>
						</div>							
					</div>	
				</div>		
			</div>
	  </li>
	    <li class="btn_logout">
	    	<% if user_signed_in? %>
				  <li>
				  <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-default') %>        
				  </li>
				<% else %>
				  <li>
				  <%= link_to('Login', new_user_session_path, :class => 'btn btn-primary')  %>  
				  </li>
				<% end %>
	    </li>	   
    </div>
    
  </div>
</div>
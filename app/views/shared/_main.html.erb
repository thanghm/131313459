<div class="block_search">
	<div id="content">
		<%= form_tag(posts_path, :method => "get", :action => 'index', id: "search-form") do %>
			<div class="form-group">
			  <div class="col-xs-8">
					<%= text_field_tag :title, params[:title], :class => 'form-control', :placeholder => 'I looking for title..' %>
						</div>
							<div class="col-xs-4">
								<%= select_tag :location, options_from_collection_for_select(Location.all, "location", "location", params[:location]), :class => 'form-control' %>
									</div>
				  					</div>
				  						<div class="form-group">
				    						<div class="col-xs-4">
													<%= select_tag :categories, options_from_collection_for_select(Category.all, "categories", "categories", params[:categories]), :class => 'form-control' %>
														</div>
															<div class="col-xs-4">
																<%= text_field_tag :salary, params[:salary], :class => 'form-control', :placeholder => 'Salary..' %>
															</div>
														<div class="col-xs-4">
													<%= select_tag :position, options_from_collection_for_select(Position.all, "position", "position", params[:position]), :class => 'form-control' %>
											</div>
				  					</div>
				  				<div class="form-group">
								<div class="col-xs-12">
				    	<div class="subright">
						<%= submit_tag "Search", :class => 'btn btn-default', :name => nil, :id => "search-all" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="block_search">
		<div id="content">

			    <%= form_tag('/users', :method => "get", id: "search-form") do %>

			     <div class="form-group">
			     	 <div class="col-xs-8">
							<%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => 'I looking for position..' %>
							</div>
							<div class="col-xs-4">
								<%= select_tag :post, options_from_collection_for_select(Post.all, "id", "location", params[:post]), :class => 'form-control' %>
							</div>
				  </div>

				  <div class="form-group">
				    <div class="col-xs-4">
							<%= select_tag :post, options_from_collection_for_select(Post.all, "id", "categories", params[:post]), :class => 'form-control' %>
						</div>
						<div class="col-xs-4">
							<%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => 'Salary..' %>
						</div>
						<div class="col-xs-4">
							<%= select_tag :post, options_from_collection_for_select(Post.all, "id", "joblevel", params[:post]), :class => 'form-control' %>
						</div>
				  </div>

				  <div class="form-group">
						<div class="col-xs-12">
				    	<div class="subright">
								<%= submit_tag "Search", :class => 'btn btn-default', :name => nil %>
					  	</div>
						</div>
					</div>

				 <% end %>
	  </div>
</div>
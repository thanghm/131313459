<div class="block_search">
	<div id="content">
		<section>
		<h2>Find User</h2>
		<%= form_tag(search_path, :method => "get", :action => 'searchuser', id: "search-form") do %>
			<div class="form-group">
			  <div class="col-xs-8">
					<%= text_field_tag :skill, params[:skill], :class => 'form-control', :placeholder => 'I looking for skill..' %>
				</div>
				<div class="col-xs-4">
					<%= select_tag :location, options_from_collection_for_select(Location.all, "location", "location", params[:location]), :prompt => 'Select location...', :class => 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-xs-12">
					<div class="subright">
						<%= submit_tag "Find Resume", :class => 'btn btn-default', :name => nil, :id => "search-all" %>
					</div>
				</div>
			</div>
		<% end %>
		</section>
	</div>
</div>

